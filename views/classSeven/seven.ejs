<%- include('../partials/header') %>

<section class="mainSection">
    <h2>Class One</h2>
    <form action="/seven" method="POST">
        <div class="form-group">
            <label for="task"><h5>Task Name</h5></label>
            <input type="text" name="task" id="task" placeholder="eg: Test #1" required>
        </div>
        <div class="form-group">
            <label for="date"><h5>Due Date</h5></label>
            <input type="datetime-local" id="date" name="date" required>
        </div>
        <div class="form-group">
            <h5>Submit Using:</h5>
            <label class="d-inline" for="blackboard">Blackboard</label>
            <input class="d-inline mr-3" type="radio" value ="Blackboard" name="submittal" id="blackboard" checked>
            <label class="d-inline" for="email">E-mail</label>
            <input class="d-inline mr-3" type="radio" value="E-mail" name="submittal" id="email">
            <label class="d-inline" for="dropbox">Drop Box</label>
            <input class="d-inline" type="radio" value="Drop Box" name="submittal" id="dropbox">
        </div>
        <div class="form-group backSubmitButton">
            <input class="btn btn-info" type="button" onclick="history.go(-1);" value="Back">    
            <input class="btn btn-success" type="submit" value="Submit">
        </div>
     </form>
</section>

<%- include('../partials/footer') %>    