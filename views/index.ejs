                <li class="disclaimer">
                    The content of this website is not guaranteed to be accurate. These pieces of information are
                    collectively gathered and uploaded by your fellow classmates. Please refer
                    to them at your discretion.
                </li>
            </ul>
        </section>
        <section class="col-md-3">
            <h5 class="text-center"><i class="far fa-calendar-alt"></i> Winter 2021 Schedule</h5>
            <ul class="text-center m-4">
                <li class="btn btn-success" onclick="showSchedule();">Timetables</li>
            </ul>
            <div id="modal">
                <div id="carousel-modal">
                    <div id="inner-carousel" class="w-100">
                        <span id="exit" onclick="closeModal();">X</span>
                        <div class="text-center mySlides">
                            <img id="scheduleOne" src="/images/schedule1.png" alt="time_table_1">
                            <h4 class="text-light mt-2">Section 1</h4>
                        </div>
                        <div class="text-center mySlides">
                            <img id="scheduleTwo" src="/images/schedule2.png" alt="time_table_1">
                            <h4 class="text-light mt-2">Section 2</h4>
                        </div>
                        <span onclick="plusSlides(-1);" id="left"><i class="fas fa-chevron-left"></i></span>
                        <span onclick="plusSlides(1);" id="right"><i class="fas fa-chevron-right"></i></span>
                    </div>
                </div>
            </div>
        </section>
        <section class="col-md-3">
            <% let rand = Math.floor(Math.random() * 28 + 1); %>
            <img class="w-100 mb-5 mt-2" src="/images/meme_<%= rand %>.jpg" alt="image">
        </section>
    </div>
    <div class="row mt-3">
        <section class="col-md-3">
            <button id="button101" onclick="saveSection(0); section101();" class="sectionButton" value="101" id="section101">Section 101</button>
