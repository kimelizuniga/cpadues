<%- include('partials/header') %>


<section id="courseList" class="mainSection container">
    <div class="courseHeading row">
        <section class="col-md-4">
            <h2>Due Dates <i class="far fa-calendar-alt"></i></h2>
            <p>Military Time: 00:00 - 23:59</p>
            <p id="result"></p>
        </section>
        <section class="col-md-4">
            <h4>Summary</h4>
            <p>
                Total Tasks:
                <span>
                    <%= taskOnes.length + taskTwos.length + taskThrees.length + taskFours.length + taskFives.length + taskSixes.length %>
                </span>
            </p>
            <p class="border-top border-bottom pt-2 pb-2">
                Due Today:
                <span class="colorYellow">
                    Under Construction
                </span>
            </p>
            <p>
                Past Dues:
                <span class="colorRed">
                    Under Construction
                </span>
            </p>
        </section>
        <section class="infos col-md-4">
            <h5>Keep track of what you've done</h5>
            <ul class="notice">
                <li class="mt-3 text-info">
                    Double click to check/uncheck a task
                </li>
                <li class="mb-3 font-italic small">
                    (Tracking will only be saved on one device)
                </li>
                <li class="disclaimer">
                    The content of this website is not guaranteed to be accurate. These pieces of information are collectively gathered and uploaded by your fellow classmates and may not be accurate. Please refer to them at your discretion.
                </li>
            </ul>
        </section>
        
    </div>
    <div class="row dates">
        <article class="col-md-6 col-lg-4">
            <div class="col-lg-12 articleBg">
                <h5>COMM110 - Communications for College</h5>
                <ul>
                    <% if(taskOnes.length > 0) { %>
                        <% taskOnes.forEach((task) => { %>
                            <% let date = task.date %>
                            <div class="mb-3">
                                <li class="toggle"><span class="taskName"><%= task.task %></span> - Due <%= date.toString().substring(0,21) %> 
                                    <div class="">
                                        Submit by
                                        <span class="submit">
                                            <%= task.submit %>
                                        </span>
                                    </div>
                                </li>
                                <a href="/one/<%= task.id %>/edit"><i class="fas fa-edit"></i></a>
                                <a href="/one/<%= task.id %>/delete"><i class="fas fa-trash-alt"></i></a>   
                            </div>
                        <% }) %>
                    <% } %>
                    <a href="/one"><i class="fas fa-plus"></i></a>
                </ul>
            </div>
        </article>
    
