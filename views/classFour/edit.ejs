<%- include('../partials/header') %>

<section class="mainSection">
    <h2>Class Four</h2>
    <form action="/four/<%= taskFour._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="task">Task Name</label>
            <input type="text" name="task[task]" id="task" value="<%= taskFour.task %>" placeholder="eg: Test #1" required>
        </div>
        <div class="form-group">
            <label for="dueDate">Due Date</label>
            <input type="datetime-local" id="date" name="task[date]" required>
        </div>
        <div class="form-group">
            <h5>Submit Using:</h5>
            <label class="d-inline" for="blackboard">Blackboard</label>
            <input class="d-inline mr-3" type="radio" value="Blackboard" name="task[submit]" id="blackboard" checked>
            <label class="d-inline" for="email">E-mail</label>
            <input class="d-inline mr-3" type="radio" value="E-mail" name="task[submit]" id="email">
            <label class="d-inline" for="dropbox">Drop Box</label>
            <input class="d-inline" type="radio" value="Drop Box" name="task[submit]" id="dropbox">
        </div>
        <div class="form-group backSubmitButton">
            <input class="btn btn-info" type="button" onclick="history.go(-1);" value="Back">    
            <input class="btn btn-success" type="submit" value="Submit">
        </div>
     </form>
</section>

<%- include('../partials/footer') %>    